<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bianyuanjiao"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tcdl_text"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="退出登录会使你所有得登录记录和收藏记录一并消失，且影响很多功能，是否确定退出？" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tcdl_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="18sp" />

            <View
                android:id="@+id/view_tcdl"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e6e6e6" />

            <TextView
                android:textColor="#EE3B3B"
                android:id="@+id/tcdl_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定退出"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>