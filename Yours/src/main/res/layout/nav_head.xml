<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/navhead_griden">

    <ImageView
        android:id="@+id/nav_head_backimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:padding="8dp"
            android:id="@+id/head_back_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/change" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/touxaing"
            app:civ_border_color="@color/wirte"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/maim_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="登录/注册"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>
</FrameLayout>